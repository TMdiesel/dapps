{
  "name": "aa-demo",
  "version": "1.0.0",
  "description": "Account Abstraction Demo Application",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:bundler",
    "install:bundler": "cd bundler && npm install",
    "setup": "npm run install:all && npm run compile:contracts",
    "compile:contracts": "cd packages/contracts && npm run compile",
    "test:contracts": "cd packages/contracts && npm run test",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "start:bundler": "cd bundler && npm run bundler",
    "start:node": "cd packages/contracts && npm run node",
    "deploy:local": "cd packages/contracts && npm run deploy:local",
    "start:all": "concurrently \"npm run start:node\" \"npm run start:bundler\" \"npm run dev:frontend\"",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}