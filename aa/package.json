{
  "name": "aa-demo",
  "version": "1.0.0",
  "description": "Account Abstraction Demo Application",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:bundler",
    "install:bundler": "cd bundler && yarn install && yarn preprocess",
    "setup": "npm run install:all && npm run compile:contracts",
    "compile:contracts": "cd packages/contracts && npm run compile",
    "test:contracts": "cd packages/contracts && npm run test",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "start:bundler": "cd bundler && yarn run bundler --unsafe",
    "start:node": "cd packages/contracts && npm run node",
    "deploy:local": "cd packages/contracts && npm run deploy:local",
    "start:all": "concurrently --kill-others-on-fail \"npm run start:node\" \"npm run start:all:deploy-and-services\"",
    "start:all:deploy-and-services": "sleep 10 && npm run deploy:local && concurrently --kill-others-on-fail \"npm run start:bundler\" \"sleep 5 && npm run dev:frontend\"",
    "kill-ports": "./scripts/kill-ports.sh",
    "kill-ports:force": "./scripts/kill-ports.sh --force",
    "ports:scan": "./scripts/kill-ports.sh --scan-only",
    "clean:start": "npm run kill-ports:force && npm run start:all",
    "start:all:concurrent": "concurrently \"npm run start:node\" \"npm run start:bundler\" \"npm run dev:frontend\"",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
